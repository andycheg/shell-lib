[user]
	name = Andrey Chegodaev
	email = andy@chegod.ru
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /Users/andy/.gitignore
[alias]
	st = status
	di = diff
	ci = commit
	rev = checkout -- 
[includeIf "gitdir:~/Development/tutu.ru/**"]
    path = ~/.gitconfig.work
[credential]
	helper = osxkeychain
